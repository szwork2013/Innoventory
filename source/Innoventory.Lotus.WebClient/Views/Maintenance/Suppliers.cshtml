@{
    ViewBag.Title = "Supplier";
    ViewBag.Name = "Supplier";

    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@section scripts
{
    <script src="~/custom-scripts/supplier/supplier-model.js"></script>
    <script src="~/custom-scripts/supplier/supplier-controller.js"></script>

}


<div class="container" ng-controller="supplierController as supplierCtrl">

    <div ng-show="apiService.isLoading">
        @Html.Partial("~/Views/Shared/Loader.cshtml")
    </div>

    @Html.Partial("~/Views/Shared/AlertBox.cshtml")

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Suppliers </h3>
        </div>
        <div class="panel-body panel-search">

            <div class="row" style="background:#fafafa; margin:0px; padding: 20px;">
                <div class=" col-sm-20">

                    <input type="text" class="form-control" placeholder="Search Supplier by Name" ng-model="searchString" />

                </div>

                <div class="col-sm-4">

                    <button class="btn-search" ng-click="searchSuppliers($event)">

                        <span class="glyphicon glyphicon-search"></span>

                    </button>

                </div>

            </div>

            
                <supplier-list></supplier-list>
            

        </div>
    </div>

    <div class="form-group">

        <a href="#" id="lnkNewSupplier" class="btn btn-primary" ng-click="newSupplier()">
            <div class="btn-div"> Create New </div>
            <i class="glyphicon glyphicon-plus btn-span"></i>
        </a>

    </div>

    <div ng-show="showSupplier">

        <supplier></supplier>

    </div>

</div>

